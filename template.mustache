<!DOCTYPE HTML>
<html lang="en">

  <head>
    <link href="front_page.css" media="screen" 
	  rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" 
	  href="http://fonts.googleapis.com/css?family=Dosis:regular,bold"/>
    <meta charset="utf-8" />
    <meta name="viewport" 
    content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>

    <script>
      (function() {
      $(window).scroll(function() {
      var oVal;
      oVal = 1 - ($(window).scrollTop() / 100);
      return $(".blur").css("opacity", oVal);
      });
      }).call(this);
    </script>
    
  </head>

  <body>

    <div class="blur" id="header">
      <div id="logo">{{name}}<span id="logo_dot">.</span>
      </div>
    </div>

    <div id="content">

      <div class="section">
        <h1>Personalities</h1>
        
        {{#avatars}}
          <a href="{{link}}">
            <figure>
            <img src="{{image}}" class="avatar"/>
            <figcaption>
            {{#sublinks}}
              <a href="{{link}}">{{name}}</a></br>
            {{/sublinks}}
            </figcaption>
            </figure>
          </a>
        {{/avatars}}
      </div>

      {{#sections}}
        <div class="section">
          <h1>{{title}}</h1>
          {{#entries}}
            <div class="talk">
              <a href="{{link}}">
                {{name}}
                <div class="info">{{info}}</div>
              </a>
            </div>
          {{/entries}}
        </div>
      {{/sections}}

    </div>
  </body>
</html>
